{
  "extends": "@reuters-graphics/yaks-ts/base",
  "include": ["src/**/*.ts", "src/@types/index.d.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "declarationDir": "dist",
    "typeRoots": ["src/@types", "./node_modules/@types"]
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "cleanOutputDir": true,
    "darkHighlightTheme": "github-dark",
    "lightHighlightTheme": "github-light",
    "sort": ["required-first"],
    "disableSources": true,
    "titleLink": "https://reuters-graphics.github.io/graphics-kit-publisher/",
    "navigationLinks": {
      "GitHub": "https://github.com/reuters-graphics/graphics-kit-publisher/",
      "npm": "https://www.npmjs.com/package/@reuters-graphics/graphics-kit-publisher/"
    },
    "readme": "HOME.md"
  }
}
